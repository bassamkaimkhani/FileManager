<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cc="clr-namespace:Manager.CustomControl">


    <Style 
        x:Key="Navbutton"
        TargetType="{x:Type cc:DriveAndFolderButton}">
        <Setter Property="Foreground" Value="AliceBlue"/>
        <Setter Property="GroupName" Value="DNF Button"/>
        <Setter Property="MinHeight" Value="25"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type cc:DriveAndFolderButton}">
                    <Grid>
                        <Path Data="{StaticResource Folder}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
            
        </Setter>


    </Style>
</ResourceDictionary>